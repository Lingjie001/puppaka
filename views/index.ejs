<!-- Hero Section -->
<section class="hero">
  <div class="container">
    <h1>Building the future,<br>one line at a time.</h1>
    <p>Software engineer & creator. Passionate about technology, open source, and building useful things.</p>
    
    <div style="display: flex; gap: 12px; margin-top: 32px;">
      <a href="/portfolio" class="btn btn-primary">View Projects</a>
      <a href="/blog" class="btn btn-secondary">Read Blog</a>
    </div>
  </div>
</section>

<!-- Latest Posts -->
<section class="section">
  <div class="container">
    <div class="section-header">
      <h2>Latest Posts</h2>
    </div>
    
    <% if (posts && posts.length > 0) { %>
    <div class="posts-grid">
      <% posts.forEach((post, index) => { %>
      <article class="post-card">
        <div class="post-meta">
          <span class="post-category"><%= post.category || 'Post' %></span>
          <span><%= new Date(post.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></span>
        </div>
        
        <h3 class="post-title">
          <a href="/blog/<%= post.slug %>"><%= post.title %></a>
        </h3>
        
        <p class="post-excerpt"><%= post.excerpt || post.content.substring(0, 150) + '...' %></p>
      </article>
      <% }); %>
    </div>
    
    <div style="margin-top: 32px;">
      <a href="/blog" class="btn btn-secondary">View All Posts ‚Üí</a>
    </div>
    <% } else { %>
    <div class="empty-state">
      <div class="empty-icon">üìù</div>
      <h3>No posts yet</h3>
      <p>Coming soon...</p>
    </div>
    <% } %>
  </div>
</section>

<!-- Featured Projects -->
<section class="section" style="background: var(--bg-secondary);">
  <div class="container">
    <div class="section-header">
      <h2>Featured Projects</h2>
    </div>
    
    <% if (projects && projects.length > 0) { %>
    <div class="projects-grid">
      <% projects.forEach((project) => { %>
      <article class="project-card">
        <div class="project-meta">
          <span class="project-category"><%= project.category || 'Project' %></span>
          <% if (project.technologies) { %>
          <div class="project-tech">
            <% project.technologies.split(',').slice(0, 3).forEach(tech => { %>
            <span class="tech-tag"><%= tech.trim() %></span>
            <% }); %>
          </div>
          <% } %>
        </div>
        
        <h3 class="project-title">
          <a href="/portfolio/<%= project.slug %>"><%= project.title %></a>
        </h3>
        
        <p class="project-desc"><%= project.description %></p>
      </article>
      <% }); %>
    </div>
    
    <div style="margin-top: 32px;">
      <a href="/portfolio" class="btn btn-secondary">View All Projects ‚Üí</a>
    </div>
    <% } else { %>
    <div class="empty-state">
      <div class="empty-icon">üé®</div>
      <h3>No projects yet</h3>
      <p>Coming soon...</p>
    </div>
    <% } %>
  </div>
</section>
