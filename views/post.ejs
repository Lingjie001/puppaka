<article class="article-page">
  <div class="article-container">
    <header class="article-header">
      <div class="article-meta">
        <span class="article-category"><%= post.category || 'Post' %></span>
        <span><%= new Date(post.created_at).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %></span>
      </div>
      
      <h1 class="article-title"><%= post.title %></h1>
      
      <% if (post.tags) { %>
      <div class="article-tags">
        <% post.tags.split(',').forEach(tag => { %>
        <span class="article-tag">#<%= tag.trim() %></span>
        <% }); %>
      </div>
      <% } %>
    </header>
    
    <div class="article-content">
      <%- post.content %>
    </div>
    
    <footer class="article-footer">
      <% if (user) { %>
      <div class="article-admin">
        <a href="/admin/posts/<%= post.id %>/edit" class="btn btn-secondary">Edit Post</a>
      </div>
      <% } %>
    </footer>
  </div>
</article>

<!-- Related Posts -->
<% if (related && related.length > 0) { %>
<section class="section section-related">
  <div class="container">
    <h3 class="related-title">Related Posts</h3>
    
    <div class="posts-grid">
      <% related.forEach((item) => { %>
      <article class="post-card">
        <div class="post-meta">
          <span class="post-category"><%= item.category || 'Post' %></span>
        </div>
        
        <h3 class="post-title">
          <a href="/blog/<%= item.slug %>"><%= item.title %></a>
        </h3>
      </article>
      <% }); %>
    </div>
  </div>
</section>
<% } %>
