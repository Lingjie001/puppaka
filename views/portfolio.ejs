<section class="page-header">
  <div class="page-container">
    <div class="page-tag">Portfolio</div>
    <h1>精选作品</h1>
    <p>探索创意项目与技术实验</p>
  </div>
</section>

<section class="section section-projects">
  <div class="section-container">
    <% if (projects && projects.length > 0) { %>
    <div class="projects-grid">
      <% projects.forEach((project, index) => { %>
      <article class="project-card <%= index === 0 ? 'project-card-large' : '' %>" data-delay="<%= index % 4 %>">
        <a href="/portfolio/<%= project.slug %>" class="project-image">
          <% if (project.featured_image) { %>
          <img src="<%= project.featured_image %>" alt="<%= project.title %>" loading="lazy">
          <% } else { %>
          <div class="project-placeholder">
            <span>🎨</span>
          </div>
          <% } %>
          
          <div class="project-overlay">
            <div class="project-view">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                <circle cx="12" cy="12" r="3"/>
              </svg>
              <span>查看详情</span>
            </div>
          </div>
        </a>
        
        <div class="project-info">
          <div class="project-meta">
            <span class="project-category"><%= project.category || 'Project' %></span>
            <% if (project.technologies) { %>
            <div class="project-tech">
              <% project.technologies.split(',').slice(0, 3).forEach(tech => { %>
              <span class="tech-tag"><%= tech.trim() %></span>
              <% }); %>
            </div>
            <% } %>
          </div>
          
          <h3 class="project-title">
            <a href="/portfolio/<%= project.slug %>"><%= project.title %></a>
          </h3>
          
          <p class="project-desc"><%= project.description %></p>
          
          <% if (project.link || project.github) { %>
          <div class="project-links">
            <% if (project.link) { %>
            <a href="<%= project.link %>" target="_blank" rel="noopener" class="project-link">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
              </svg>
              <span>访问网站</span>
            </a>
            <% } %>
            
            <% if (project.github) { %>
            <a href="<%= project.github %>" target="_blank" rel="noopener" class="project-link">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              <span>查看代码</span>
            </a>
            <% } %>
          </div>
          <% } %>
        </div>
      </article>
      <% }); %>
    </div>
    
    <% } else { %>
    <div class="empty-state">
      <div class="empty-icon">🎨</div>
      <h3>暂无作品</h3>
      <p>作品集即将上线，敬请期待...</p>
      <% if (typeof user !== 'undefined' && user) { %>
      <a href="/admin/projects/new" class="btn btn-primary">创建第一个作品</a>
      <% } %>
    </div>
    <% } %>
  </div>
</section>