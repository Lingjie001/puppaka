<!-- Page Header -->
<section class="page-header">
  <div class="container">
    <h1>Projects</h1>
    <p>A collection of experiments, side projects, and things I've built.</p>
  </div>
</section>

<!-- Projects Grid -->
<section class="section">
  <div class="container">
    <% if (projects && projects.length > 0) { %>
    <div class="projects-grid">
      <% projects.forEach((project) => { %>
      <article class="project-card">
        <div class="project-meta">
          <span class="project-category"><%= project.category || 'Project' %></span>
          <% if (project.technologies) { %>
          <div class="project-tech">
            <% project.technologies.split(',').slice(0, 5).forEach(tech => { %>
            <span class="tech-tag"><%= tech.trim() %></span>
            <% }); %>
          </div>
          <% } %>
        </div>
        
        <h3 class="project-title">
          <a href="/portfolio/<%= project.slug %>"><%= project.title %></a>
        </h3>
        
        <p class="project-desc"><%= project.description %></p>
        
        <% if (project.link || project.github) { %>
        <div style="margin-top: 16px; display: flex; gap: 16px;">
          <% if (project.link) { %>
          <a href="<%= project.link %>" target="_blank" rel="noopener" style="color: var(--accent); font-size: 0.9rem;">Website â†’</a>
          <% } %>
          <% if (project.github) { %>
          <a href="<%= project.github %>" target="_blank" rel="noopener" style="color: var(--accent); font-size: 0.9rem;">GitHub â†’</a>
          <% } %>
        </div>
        <% } %>
      </article>
      <% }); %>
    </div>
    <% } else { %>
    <div class="empty-state">
      <div class="empty-icon">ðŸŽ¨</div>
      <h3>No projects yet</h3>
      <p>Check back soon for new projects.</p>
    </div>
    <% } %>
  </div>
</section>
