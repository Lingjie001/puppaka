<!-- Page Header -->
<section class="page-header">
  <div class="container">
    <h1>Blog</h1>
    <p>Thoughts on software engineering, technology, and building things.</p>
  </div>
</section>

<!-- Blog Posts -->
<section class="section">
  <div class="container">
    <% if (posts && posts.length > 0) { %>
    <div class="posts-grid">
      <% posts.forEach((post) => { %>
      <article class="post-card">
        <div class="post-meta">
          <span class="post-category"><%= post.category || 'Post' %></span>
          <span><%= new Date(post.created_at).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %></span>
        </div>
        
        <h3 class="post-title">
          <a href="/blog/<%= post.slug %>"><%= post.title %></a>
        </h3>
        
        <p class="post-excerpt"><%= post.excerpt || post.content.substring(0, 200) + '...' %></p>
        
        <% if (post.tags) { %>
        <div class="article-tags" style="margin-top: 12px;">
          <% post.tags.split(',').forEach(tag => { %>
          <span class="article-tag">#<%= tag.trim() %></span>
          <% }); %>
        </div>
        <% } %>
      </article>
      <% }); %>
    </div>
    <% } else { %>
    <div class="empty-state">
      <div class="empty-icon">üìù</div>
      <h3>No posts yet</h3>
      <p>Check back soon for new content.</p>
    </div>
    <% } %>
  </div>
</section>
